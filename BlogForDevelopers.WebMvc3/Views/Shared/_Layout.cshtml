<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="Blog com conteudo sobre .net">
	<meta name="author" content="Jonatas Saraiva">
	<meta name="keywords" content="@BlogForDevelopers.WebMvc3.App_Helpers.TagHelper.GetTagsPublishedSeparatedByCommas()">

	<title>Jonatas Saraiva .net me orbita</title>

	<link href="@Url.Content("~/Content/css/metro.css")" rel="stylesheet">
	<link href="@Url.Content("~/Content/css/site.less")" rel="stylesheet/less" type="text/css">
	<link href="@Url.Content("~/Content/css/representative.css")" rel="stylesheet" media="all">
	@RenderSection("css", false)


	<script src="@Url.Content("~/Content/js/less-1.3.0.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery-1.8.0.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Content/js/jquery.mousewheel.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Content/js/metroui.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Content/js/site.js")" type="text/javascript"></script>
	@RenderSection("javascript", false)

	<script type="text/javascript">
		$(function () {
			$("body").metroUI();
		})
	</script>
	<style>
		
		body {
            background: @ViewBag.Background
        }
		
	</style>

</head>
<body>

	<div class="metro">
		<div class="layout">

			<!-- Header -->
			<div class="header" id="header">
				<div class="info" style="position: absolute; left: 120px; top: 5px; right: 0; padding: 0;">
					<h3 style="margin: 0; padding: 0; font-size: 12pt; font-weight: 200;">Jonatas Saraiva</h3>
				</div>

				<div class="command-back-wrapper">
					<a href="javascript:void(0);">
						<img src="@Url.Content("~/Content/img/left-32.png")" /></a>
				</div>

				<ul class="commands-list place-right margin-20 github-info" data-repo="olton/Metro-UI-CSS">
					<li><a class="command" href="/contact">
						<img alt="email" src="/content/img/email-32.png" /></a></li>
					<li><a class="command" target="_blank" href="http://twitter.com/jonatassaraiva">
						<img alt="twitter" src="/content/img/twitter-32.png" /></a></li>
					<li><a class="command" target="_blank" href="http://br.linkedin.com/in/jonatassaraiva">
						<img alt="linkedin" src="/content/img/linked-32.png" /></a></li>
					<li><a class="command" target="_blank" href="https://github.com/jonatassaraiva">
						<img alt="github" src="/content/img/github.png" /></a></li>
					@*<li><a class="command" data-click="toggleCommands" onclick="toggleCommands()">
						<img src="/content/img/commands-32.png" />
					</a></li>*@
				</ul>

				<div class="dropdown-container clearfix">
					<a class="dropdown-toggle">
						<h1>.net em orbita</h1>
					</a>

					<ul class="dropdown-menu">
						<li><a href="/">Home</a></li>
						<li class="divider"></li>
						<li><a href="/about">Sobre</a></li>
						<li class="divider"></li>
						<li><a href="/projetos">Projetos</a></li>
						<li class="divider"></li>
						<li><a href="/contact">Contato</a></li>
					</ul>
				</div>
			</div>

			<!-- Scrollable content -->
			<div class="@ViewBag.MetroScroll">
				<div class="content clearfix" id="content">
					@RenderBody()
				</div>
			</div>

			@if (ViewBag.ShowMessageFooter != null && (bool)ViewBag.ShowMessageFooter)
   {
				<div class="info bg-color-red text-center" style="position: fixed; left: 0; bottom: 0; width: 100%;">
					Para rolagem: pressione o botão esquerdo do mouse sob o conteudo e nova para o lados << | >>, ou, use a rolagem do mouse.
				</div>
   }

			<!-- Commands -->
			<div class="commands" id="commands">
				<ul class="commands-list place-right">
					<li>
						<a class="command">
							<img src="content/img/find-32.png" alt="Find" />
							<span>Find</span>
						</a>
					</li>
				</ul>

				<ul class="commands-list place-left">
					<li>
						<a class="command">
							<img src="content/img/favorites-32.png" alt="Favorites" />
							<span>Favorites</span>
						</a>
					</li>
					<li class="divider"></li>
					<li>
						<a class="command" onclick="document.location.reload()">
							<img src="content/img/refresh-32.png" alt="Refresh" />
							<span>Refresh</span>
						</a>
					</li>

					<li>
						<a class="command">
							<img src="content/img/bookmark-add-32.png" alt="Add bookmark" />
							<span>Bookmark</span>
						</a>
					</li>

				</ul>
			</div>
		</div>
	</div>
</body>
</html>
