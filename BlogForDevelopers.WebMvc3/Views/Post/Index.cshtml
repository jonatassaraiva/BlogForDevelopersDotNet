@model BlogForDevelopers.Domain.Entities.Post
@using BlogForDevelopers.WebMvc3.App_Helpers

@{
	ViewBag.Background = "#004050";
	ViewBag.MetroScroll = "metro-scroll-vertical mouse-normal";
	ViewBag.ShowMessageFooter = false;
}

@section css{
	<link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/css/site.css")" />	
	<link type="text/css" rel="stylesheet" href="@Url.Content("~/Scripts/syntaxhighlighter/styles/shCore.css")" />
	<link type="text/css" rel="stylesheet" href="@Url.Content("~/Scripts/syntaxhighlighter/styles/shThemeRDark.css")"/>
}


@section javascript{
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shCore.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushAS3.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushBash.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushCpp.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushCSharp.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushCss.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushDelphi.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushDiff.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushErlang.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushGroovy.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushJava.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushJavaFX.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushJScript.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushPerl.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushPhp.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushPlain.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushPowerShell.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushPython.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushRuby.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushScala.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushSql.js")"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushVb.j")s"></script>
	<script type="text/javascript"src="@Url.Content("~/Scripts/syntaxhighlighter/scripts/shBrushXml.js")"></script>

	<script lang="text/javascript">
		SyntaxHighlighter.config.stripBrs = true;
		SyntaxHighlighter.all();
	</script>
}

<h1 style="font-size: 3em">@Model.Title</h1>

<div class="content-post clearfix" >
	@Html.Raw(Model.Content)
</div>

<br />
<div style="width: 100%;">
	<div>
		<h6 style="font-size: 1.2em" class="clearfix">{ Tags: @Html.Partial("~/Views/Tag/_TagsLink.cshtml", Model.Tags) } { post em @Model.DatePublished.ToString("dd/MM/yyyy") }</h6>
	</div>
</div>
